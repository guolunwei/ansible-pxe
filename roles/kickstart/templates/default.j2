default menu.c32
prompt 0
timeout 300
ONTIMEOUT 3

menu title ########## PXE Boot Menu ##########

label 1
menu label ^1) Install {{ os_name }} with Local Repo
kernel centos7/vmlinuz
append initrd=centos7/initrd.img method=ftp://10.0.0.10/pub devfs=nomount

label 2
menu label ^2) Install {{ os_name }} with Local Repo using VNC
kernel centos7/vmlinuz
append initrd=centos7/initrd.img method=ftp://10.0.0.10/pub devfs=nomount inst.vnc inst.vncpassword=password

label 3
menu label ^3) Install {{ os_name }} with Local Repo using kickstart
kernel centos7/vmlinuz
append initrd=centos7/initrd.img inst.ks={{ ks_url }}

label 4
menu label ^4) Install {{ os_name }} with Internet Repo
kernel centos7/vmlinuz
append initrd=centos7/initrd.img method=http://mirror.centos.org/centos/7/os/x86_64/ devfs=nomount ip=dhcp

label 5
menu label ^5) Boot from local drive
menu default
